# [user]
#     name = Username
#     email = user@example.com

[alias]
    st = status
    ci = commit
    co = checkout
    br = branch -v
    d =  diff
    lg = log --pretty=format:'%Cred%h% %Cblue%d% Creset%s %Cblue%cr %Cgreen(%an)%Creset'
    l = log --pretty=format:'%Cred%h% %Cblue%d% Creset%s %Cblue%cr %Cgreen(%an)%Creset' --graph --all
    f = fetch --prune -v
    r = remote -v

[merge]
    tool = meld
    defaultToUpstream = True

[core]
    editor = vim
    pager = less

[color]
    ui = auto

[push]
    default = upstream

[include]
    path = ".gitlocal"
